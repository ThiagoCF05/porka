                    class="" style="display: block;">
                    <% if @oferta.imagens.count != 0 %>
                      <%= image_tag @oferta.imagens[0].image.url(:medium), :class => "oferta" %>
                    <% end %>
                        </a>
            </div>
            <div id="sidebarDeal">
                <form action=""
                    method="get" id="frmCompar" name="frmCompar">
                    <input type="hidden" id="splitoption" name="splitoption">
