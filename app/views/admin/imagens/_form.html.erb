<%= form_for [:admin, @imagem],:html => { :multipart => true } do |f| %>
  <% if @imagem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@imagem.errors.count, "error") %> Erro ao Salvar</h2>

      <ul>
      <% @imagem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<p>
		<%= f.label 'Imagem' %><br />
		<%= f.file_field :imagem %>
	</p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
