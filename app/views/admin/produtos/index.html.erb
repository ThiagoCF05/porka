<h1>PRODUTOS</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Nome</th>
    <th>Cooperativa</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <% @produtos.each do |produto| %>
    <tr>
      <td><%= produto.id %></td>
      <td><%= produto.nome %></td>
      <td><%= produto.cooperativa.nome %></td>
      <td><%= produto.status.descricao %></td>
      <td><%= link_to 'Show', admin_produto_path(produto) %></td>
      <td><%= link_to 'Edit', edit_admin_produto_path(produto) %></td>
      <td><%= link_to 'Destroy', [:admin,produto] , :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Novo Produto', new_admin_produto_path %>
